<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/theme_color</item>
        <item name="colorPrimaryDark">@color/theme_color</item>
        <item name="colorAccent">@color/theme_color</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:colorPrimaryDark" tools:targetApi="lollipop">@color/bg_background</item>
        <item name="android:windowBackground">@color/bg_background</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
    </style>

    <style name="Theme.AppStartLoad" parent="BaseTheme">
        <item name="android:windowBackground">@color/theme_color</item>
    </style>

    <style name="MyDialog" parent="android:Theme.Dialog">
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowFrame">@null</item> <!--边框-->
        <item name="android:windowBackground">@color/transparent</item> <!-- 背景透明 -->
        <item name="android:windowNoTitle">true</item> <!--无标题-->
        <item name="android:windowIsTranslucent">true</item> <!--半透明-->
        <item name="android:windowIsFloating">true</item> <!--是否浮现在activity之上-->
        <item name="android:background">@drawable/bg_dialog</item>
    </style>

    <style name="normal_line_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_width</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <style name="normal_line_vertical">
        <item name="android:layout_width">@dimen/line_width</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line_color</item>
    </style>

    <!--默认编辑栏样式-->
    <style name="rl_edit_normal" >
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">@dimen/regular_dimen_x10</item>
        <item name="android:paddingBottom">@dimen/regular_dimen_x10</item>
    </style>

    <style name="normal_tx_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/normal_text_color</item>
        <item name="android:minHeight">0dp</item>
    </style>

    <!--默认编辑栏样式-->
    <style name="tv_edit_normal" >
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:drawablePadding">@dimen/regular_dimen_x8</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textColor">@color/normal_text_color</item>
    </style>

    <style name="normal_btn_theme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/btn_theme</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:paddingTop">@dimen/regular_dimen_x8</item>
        <item name="android:paddingBottom">@dimen/regular_dimen_x8</item>
        <item name="android:paddingLeft">@dimen/regular_dimen_x25</item>
        <item name="android:paddingRight">@dimen/regular_dimen_x25</item>
    </style>

    <!--默认提交按钮样式-->
    <style name="btn_normal">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/btn_theme</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:paddingTop">@dimen/regular_dimen_x10</item>
        <item name="android:paddingBottom">@dimen/regular_dimen_x10</item>
    </style>

</resources>
