<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/regular_dimen_x3"
        android:layout_marginBottom="@dimen/regular_dimen_x3"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/regular_dimen_x10">


        <ProgressBar
            android:id="@+id/pb_footer"
            android:layout_width="@dimen/regular_dimen_x21"
            android:layout_height="@dimen/regular_dimen_x21"
            android:layout_marginLeft="@dimen/regular_dimen_x16"
            android:layout_marginRight="@dimen/regular_dimen_x16" />

        <TextView
            android:id="@+id/tv_footer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="正在加载中..." />

    </LinearLayout>

</LinearLayout>