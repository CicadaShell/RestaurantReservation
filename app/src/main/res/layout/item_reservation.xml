<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="@dimen/regular_dimen_x16"
    android:paddingRight="@dimen/regular_dimen_x16" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="@dimen/regular_dimen_x4"
        android:background="@drawable/bg_white_border"
        android:elevation="@dimen/regular_dimen_x2"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/line"
            android:layout_width="@dimen/regular_dimen_x8"
            android:layout_height="match_parent"
            android:src="@drawable/bg_reservation_left" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/regular_dimen_x5"
            android:paddingBottom="@dimen/regular_dimen_x5">

            <ImageView
                android:id="@+id/ivStatusType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_status_type" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/regular_dimen_x15"
                android:layout_marginTop="@dimen/regular_dimen_x5"
                android:layout_marginRight="@dimen/regular_dimen_x15"
                android:text="预约中"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

        </LinearLayout>

        <View style="@style/normal_line_vertical" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/regular_dimen_x8">

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="整理表格"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNumOfPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x8"
                android:text="人数"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_14" />

            <TextView
                android:id="@+id/tvRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/regular_dimen_x5"
                android:text="备注"
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_14" />

        </LinearLayout>

    </LinearLayout>

</FrameLayout>