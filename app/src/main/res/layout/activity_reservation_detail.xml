<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <include layout="@layout/layout_action_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="@dimen/regular_dimen_x16"
        android:paddingRight="@dimen/regular_dimen_x16">

        <RelativeLayout style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_name"
                android:text="姓名" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <RelativeLayout
            android:id="@+id/rlPhone"
            style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_phone"
                android:text="手机号" />

            <TextView
                android:id="@+id/tvPhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <RelativeLayout style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_date"
                android:text="预约日期" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <RelativeLayout style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_time"
                android:text="时间段" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <RelativeLayout style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_num"
                android:text="就餐人数" />

            <TextView
                android:id="@+id/tvNumOfPeople"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <RelativeLayout
            style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_status"
                android:text="预约状态" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/theme_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <LinearLayout
            android:id="@+id/llArrival"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                style="@style/rl_edit_normal">

                <TextView
                    style="@style/tv_edit_normal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_arrival"
                    android:text="到达时间" />

                <TextView
                    android:id="@+id/tvArrivalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/text_size_16" />

            </RelativeLayout>

            <View style="@style/normal_line_horizontal" />

            <RelativeLayout
                style="@style/rl_edit_normal">

                <TextView
                    style="@style/tv_edit_normal"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:drawableLeft="@mipmap/icon_table"
                    android:text="桌号" />

                <TextView
                    android:id="@+id/tvTable"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text=""
                    android:textColor="@color/normal_text_color"
                    android:textSize="@dimen/text_size_16" />

            </RelativeLayout>

            <View style="@style/normal_line_horizontal" />

        </LinearLayout>

        <RelativeLayout style="@style/rl_edit_normal">

            <TextView
                style="@style/tv_edit_normal"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:drawableLeft="@mipmap/icon_remark"
                android:text="备注" />

            <TextView
                android:id="@+id/tvRemark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/normal_text_color"
                android:textSize="@dimen/text_size_16" />

        </RelativeLayout>

        <View style="@style/normal_line_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/regular_dimen_x30"
            android:layout_marginLeft="@dimen/regular_dimen_x16"
            android:layout_marginRight="@dimen/regular_dimen_x16"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/btnCancel"
                style="@style/btn_normal"
                android:layout_marginRight="@dimen/regular_dimen_x20"
                android:background="@drawable/btn_delete"
                android:text="取消"
                android:visibility="visible" />

            <TextView
                android:id="@+id/btnArrival"
                style="@style/btn_normal"
                android:text="入座" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>